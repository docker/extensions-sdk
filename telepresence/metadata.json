{
  "desktop-plugin-version": "1.0",
  "name": "telepresence",
  "ui": {
    "dashboard-tab": {
      "title": "Telepresence",
      "root": "/ui",
      "src": "index.html"
    }
  },
  "host": {
    "binaries": [
      {
        "darwin": [
          {
            "path": "/darwin/telepresence"
          },
          {
            "path": "/darwin/kubectl"
          }
        ],
        "windows": [
          {
            "path": "/windows/kubectl.exe"
          },
          {
            "path": "/windows",
            "install":{
              "command": "./windows/telepresence-win-install.ps1",
              "requiresAdmin": true
            } 
          }
        ]
      }
    ]
  }
}
